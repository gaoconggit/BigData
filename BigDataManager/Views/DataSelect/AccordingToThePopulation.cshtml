<table align="center" class="am-table am-table-bordered">
    <thead>
        <tr>
            <th>姓名</th>
            <th>证件号</th>
            <th>户籍状况</th>
            <th>详细</th>
        </tr>
    </thead>
    <tbody>
        @foreach (RdtPnModel item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.IdCard</td>
                <td>@(item.IsLocalCity==0?"本市":"非本市")</td>
                <td><input class="am-btn-success am-round" type="button" value="查看详细" /></td>
            </tr>    
        }
    </tbody>
</table>
<input id="pageIndex" type="hidden" value="@ViewData["pageIndex"]" />
<input id="pageSize" type="hidden" value="@ViewData["pageSize"]" />
