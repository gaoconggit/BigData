@using BigDataManager.Models
@using Webdiyer.WebControls.Mvc
@model PagedList<RdtPnModel>

@{
    ViewBag.Title = "AccordingToThePopulation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/assets/css/Pager.css" rel="stylesheet" />
<table align="center" class="am-table am-table-bordered">
    <thead>
        <tr>
            <th>姓名</th>
            <th>证件号</th>
            <th>户籍状况</th>
            <th>详细</th>
        </tr>
    </thead>
    <tbody>
        @foreach (RdtPnModel item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.IdCard</td>
                <td>@(item.IsLocalCity==0?"本市":"非本市")</td>
                <td><input class="am-btn-success am-round" type="button" value="查看详细" onclick="window.location = '/DataSelect/PopulationDetailStructuring?pid='+'@item.IdCard';" /></td>
            </tr>    
        }
    </tbody>
</table>
    @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageIndex", PagerItemsSeperator = "", ShowPageIndexBox = true, CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>" }, new { id = "badoopager" })

    @section Scripts{@{Html.RegisterMvcPagerScriptResource();}}